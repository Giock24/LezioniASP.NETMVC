@model IEnumerable<Student>

<p>Ciao, dalla vista index: @Model.Count()</p>

<a style="margin: 10px;" class="btn btn-info" asp-controller="Students" asp-action="Create">Create</a>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Data di Nascita</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
                <tr>
                    <td>
                        @student.Id
                    </td>
                    <td>
                        @student.Nome
                    </td>
                    <td>
                        @student.Cognome
                    </td>
                    <td>
                        @( student.DataNascita?.Year == 1 ? "" : student.DataNascita?.ToShortDateString() )
                    </td>
                    <td>
                        @* <a class="btn btn-success" href="Students/Details/@student.Id">Details</a> *@
                        <a class="btn btn-success" asp-controller="Students" asp-action="Details" asp-route-id="@student.Id">Details</a>
                        <a class="btn btn-warning" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                        <a class="btn btn-danger" asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

