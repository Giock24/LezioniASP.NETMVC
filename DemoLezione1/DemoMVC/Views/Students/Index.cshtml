@model IEnumerable<Student>

<p>Ciao, dalla vista index: @Model.Count()</p>

<a style="margin-bottom:10px;" class="btn btn-info" asp-controller="Students" asp-action="Create">Create</a>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Matricola</th>
            <th>Data di nascita</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <td>
                    @student.Nome
                </td>
                <td>
                    @student.Cognome
                </td>
                <td>
                    @student.Matricola
                </td>
                <td>
                    @(student.DataDiNascita?.Year == 1 ? "" : student.DataDiNascita?.ToShortDateString())
                </td>
                <td>
                    @* <a class="btn btn-success" href="Students/Details/@student.Id">Details</a> *@
                    <a class="btn btn-info" asp-controller="Students" asp-action="Details" asp-route-id="@student.Id">Details</a>
                    <a class="btn btn-warning" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
